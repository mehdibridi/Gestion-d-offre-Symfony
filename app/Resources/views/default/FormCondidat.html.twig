<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
    <link rel="stylesheet" type="text/css" href="css/bootstrap-FileUpload.min.css" />
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap-datepicker.js"></script>
</head>
<body>
{% block body %}
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="{{ path('user_offre') }}">Accueil</a>
            </div>

            <ul class="nav navbar-nav navbar-right">
                {%  if not app.user %}
                    <li><a href="{{ path('security_login') }}">Connexion</a></li>
                    <li><a href="{{ path('security_Inscription') }}">Inscription</a></li>


                {% else %}
                    <li><a href="{{ path('security_logout') }}">DÃ©connexion</a></li>
                {% endif %}

            </ul>
        </div>
        </div>
    </nav>
    <div class="container" >
        {{ form_start(f, {attr: {novalidate: 'novalidate'}}) }}
        <script>
            $(function () {
                $('.datepicker').datepicker();
            })
        </script>
        <div class="form-group"> {{ form_row(f.sourceDeCandidature, {'attr':{'class':'form-control'}}) }}</div>
        <div class="form-group"> {{ form_row(f.cin, {'attr':{'class':'form-control'}}) }}</div>
        <div class="form-group"> {{ form_row(f.nom, {'attr':{'class':'form-control'}}) }}</div>
        <div class="form-group"> {{ form_row(f.prenom, {'attr':{'class':'form-control'}}) }}</div>
        <div class="form-group"> {{ form_row(f.courriel, {'attr':{'class':'form-control','placeholder':'example@outlook.com'}}) }}</div>
        <div class="form-group"> {{ form_row(f.situationFamiliale, {'attr':{'class':'form-control'}}) }}</div>
        <div class="form-group"> {{ form_row(f.dateDeNaissance, {'attr':{'class':'datepicker'}}) }}</div>

        <div class="form-group"> {{ form_row(f.villeDeNaissance, {'attr':{'class':'form-control'}}) }}</div>
        <div class="form-group"> {{ form_row(f.nationalite, {'attr':{'class':'form-control'}}) }}</div>
        <div class="form-group"> {{ form_row(f.adresse, {'attr':{'class':'form-control'}}) }}</div>
        <div class="form-group"> {{ form_row(f.codepostal, {'attr':{'class':'form-control'}}) }}</div>
        <div class="form-group"> {{ form_row(f.ville, {'attr':{'class':'form-control'}}) }}</div>
        <div class="form-group"> {{ form_row(f.pays, {'attr':{'class':'form-control'}}) }}</div>
        <div class="form-group"> {{ form_row(f.numeroDeTelephone, {'attr':{'class':'form-control'}}) }}</div>
        <div class="form-group"> {{ form_row(f.disponibilite, {'attr':{'class':'form-control'}}) }}</div>

        <div class="form-group"> {{ form_row(f.dateDeDisponibilite, {'attr':{'class':'datepicker'}}) }}</div>
        <div class="form-group"> {{ form_row(f.curriculumVitae, {'attr':{'class':'custom-file-input', 'id':'customFile'}}) }}</div>
        <div class="form-group"> {{ form_row(f.lettreeMotivation, {'attr':{'class':'custom-file-input', 'id':'customFile'}}) }}</div>
        <div class="form-group"> {{ form_row(f.Ajouter, {'attr':{'class':'btn btn-primary btn-lg'}}) }}</div></div>

        {{ form_end(f) }}
    </div>
{% endblock %}

</body>
</html>
